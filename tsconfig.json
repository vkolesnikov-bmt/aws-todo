{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "rootDir": "./"
  },
  "exclude": [
    "node_modules",
    "coverage",
    "build",
    ".git",
    "typings"
  ]
}